---
import { type ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string;
  altText: string;
  className?: string;
  loading?: "eager" | "lazy";
}

const { src, altText, className = "", loading = "lazy" } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/content/images/*.{jpeg,jpg,png,gif,svg}",
);
if (!images[src])
  throw new Error(
    `"${src}" does not exist in glob: "src/content/images/*.{jpeg,jpg,png,gif}"`,
  );
---

<Image
  src={images[src]()}
  alt={altText}
  class={` ${className}`}
  loading={loading}
/>
