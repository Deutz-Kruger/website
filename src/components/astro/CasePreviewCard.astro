---
import ImageWrapper from "./ImageWrapper.astro";

interface Props {
  imagePath: string;
  altText: string;
  title: string;
  slug: string;
}

const {
  imagePath,
  altText = "Preview for client case",
  title,
  slug,
} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/content/images/*.{jpeg,jpg,png,gif,svg}",
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/content/images/*.{jpeg,jpg,png,gif}"`,
  );
---

<a href={slug}>
  <h2>{title}</h2>
  <ImageWrapper
    imagePath={imagePath}
    altText={`Highlight of a project done with ${altText}`}
  />
</a>
